<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eCareSathi Landing Page</title>
    <style>
        body {
            font-family: 'Arial', sans-serif; /* Changed to Arial for consistency */
            margin: 0;
            padding: 0;
            background-color: #ffe4b5; /* Subtle orangish background */
            display: flex;
            flex-direction: column; /* Column layout */
            align-items: center;
            height: 100vh;
            color: #333;
        }
        header {
            text-align: center;
            padding: 20px;
            background-color: #ffffff; /* White background for header */
            width: 100%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: relative;
        }
        .welcome-section {
            margin-bottom: 20px;
        }
        .welcome-section h2 {
            color: #ff69b4; /* Pink text */
            font-size: 32px;
        }
        .welcome-section p {
            font-size: 18px;
            color: #555; /* Darker text for contrast */
        }
        nav {
            margin: 15px 0;
        }
        nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #ff69b4; /* Pink link color */
            font-weight: bold;
        }
        .container {
            display: flex;
            justify-content: space-around;
            align-items: center;
            width: 80%;
            max-width: 1000px;
            padding: 30px;
            background-color: #ffffff; /* White background */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            border-radius: 20px;
            margin-top: 20px; /* Space from header */
            flex-wrap: wrap; /* Wraps elements if needed */
        }
        .image-box {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 20px; /* Space between image and buttons */
        }
        .image-box img {
            max-width: 90%; /* Responsive image */
            border-radius: 20px;
            border: 5px solid #d1c3ca; /* Pink border */
        }
        .options-box {
            flex: 1;
            text-align: center;
            padding: 20px;
        }
        .options-box h2 {
            font-size: 28px;
            color: #e4c05c; /* Pink text */
            margin-bottom: 10px;
        }
        .options-box p {
            font-size: 20px;
            margin: 10px 0;
            color: #555; /* Darker text for contrast */
        }
        .options-box button {
            background-color: #c9b1a9; 
            color: white;
            border: none;
            padding: 15px 25px;
            margin: 10px;
            border-radius: 30px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }
        .options-box button:hover {
            background-color: #e9b466; 
            transform: scale(1.05); /* Slightly enlarge on hover */
        }
        .options-box button:focus {
            outline: none; /* Remove default outline */
        }
    </style>
</head>
<body>
    <header>
        <div class="welcome-section">
            <h2>Welcome to eCareSathi</h2>
            <p>Your journey towards better parenting starts here!</p>
        </div>
        <nav>
            <a href="#about">About</a>
            <a href="#services">Services</a>
            <a href="#contact">Contact</a>
        </nav>
    </header>
    <div class="container">
        <div class="image-box">
            <img src="..//public/images/child5.png" alt="eCareSathi Image"> 
        </div>
        <div class="options-box">
            <h2>Join eCareSathi</h2>
            <p>Please select your role:</p>
            <button onclick="redirectToRole('caregiver')">I am a Caregiver</button>
            <button onclick="redirectToRole('rider')">I am a Rider</button>
            <button onclick="redirectToRole('parent')">I am a Parent/User</button>
        </div>
    </div>

    <script>
        function redirectToRole(role) {
            switch (role) {
                case 'caregiver':
                    window.location.href = '/caregiver-registration';
                    break;
                case 'rider':
                    window.location.href = '/driver-profile';
                    break;
                case 'parent':
                    window.location.href = '/signUp';
                    break;
                default:
                    console.error('Unknown role selected');
            }
        }
    </script>
</body>
</html>
