    <h2>Update Pickup Status</h2>
    <form action="/pickup_completed" method="POST">
        <label for="pickupId">Pickup ID:</label>
        <input type="number" name="pickupId" required>
        <button type="submit">Mark as Picked Up</button>
    </form>

    <form action="/dropoff_completed" method="POST">
        <label for="pickupId">Pickup ID:</label>
        <input type="number" name="pickupId" required>
        <button type="submit">Mark as Dropped Off</button>
    </form>