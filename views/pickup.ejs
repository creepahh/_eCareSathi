 <h1>Child Pickup Notifications</h1>

    <h2>Schedule a Pickup</h2>
    <form action="/schedule_pickup" method="POST">
        <label for="parentId">Select Parent:</label>
        <select name="parentId" required>
            <% users.parents.forEach(parent => { %>
                <option value="<%= parent.id %>"><%= parent.name %></option>
            <% }); %>
        </select>

        <label for="riderId">Select Rider:</label>
        <select name="riderId" required>
            <% users.riders.forEach(rider => { %>
                <option value="<%= rider.id %>"><%= rider.name %></option>
            <% }); %>
        </select>

        <label for="pickupTime">Pickup Time:</label>
        <input type="datetime-local" name="pickupTime" required>

        <label for="dropoffTime">Drop-off Time:</label>
        <input type="datetime-local" name="dropoffTime" required>

        <button type="submit">Schedule Pickup</button>
    </form>

