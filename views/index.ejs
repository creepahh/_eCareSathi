<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eCareSathi</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<header>
        <div class="welcome-section">
            <h2>Welcome to eCareSathi</h2>
            <p>Your journey towards better parenting starts here!</p> 
        </div>
        <nav>
            <a href="#about">About</a>
            <a href="#services">Services</a>
            <a href="#contact">Contact</a>
        </nav>
</header>
    
<body>
    <div id="img">
        <img src="/images/child1.png" alt="Welcome Image">
    </div>
        <div class="container" id="container">
            <!-- Sign In -->
            <div class="form-container sign-in">
                <h2>Sign In</h2>
                <div>
                    <label for="parentEmail">Parent Email:</label>
                    <input type="email" id="parentEmail" placeholder="Enter your email" required>
                </div>
                <div>
                    <label for="parentPassword">Password:</label>
                    <input type="password" id="parentPassword" placeholder="Enter your password" required>
                </div>
                <button id="fetchChildDetails">Fetch Child Details</button>
                
                <div id="childDetails">
                    <!-- Child details will be displayed here -->
                </div>
                <p>Don't have an account? <a href="#" id="register">Sign Up</a></p>
            </div>
    
            <!-- Sign Up -->
            <div class="form-container sign-up">
                <h2>Create Account</h2>
                <div>
                    <label for="parentName">Parent Name:</label>
                    <input type="text" id="parentName" placeholder="Enter your name" required>
                </div>
                <div>
                    <label for="parentEmailSignup">Email:</label>
                    <input type="email" id="parentEmailSignup" placeholder="Enter your email" required>
                </div>
                <div>
                    <label for="childName">Child Name:</label>
                    <input type="text" id="childName" placeholder="Enter your child's name" required>
                </div>
                <button id="submitSignup">Submit</button>
                <p>Already have an account? <a href="#" id="login">Sign In</a></p>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('container');
        const registerBtn = document.getElementById('register');
        const loginBtn = document.getElementById('login');
        const fetchChildDetailsBtn = document.getElementById('fetchChildDetails');
        const childDetailsDiv = document.getElementById('childDetails');

        // Toggle between Sign In and Sign Up
        registerBtn.addEventListener('click', (event) => {
            event.preventDefault();  // Prevent default anchor behavior
            container.classList.add("active");
        });

        loginBtn.addEventListener('click', (event) => {
            event.preventDefault();  // Prevent default anchor behavior
            container.classList.remove("active");
        });

        // Fetch child details on sign-in
        fetchChildDetailsBtn.addEventListener('click', async () => {
            const parentEmail = document.getElementById('parentEmail').value;
            const parentPassword = document.getElementById('parentPassword').value;

            if (!parentEmail || !parentPassword) {
                childDetailsDiv.innerHTML = `<p>Please enter both email and password.</p>`;
                return;
            }

            // Fetch data from your server (adjust the URL to your API)
            try {
                const response = await fetch('/api/getChildDetails', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: parentEmail, password: parentPassword })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                if (data.success) {
                    childDetailsDiv.innerHTML = `
                        <h3>Child Details:</h3>
                        <p>Name: ${data.child.name}</p>
                        <p>Age: ${data.child.age}</p>
                    `;
                } else {
                    childDetailsDiv.innerHTML = `<p>No child data found or login failed.</p>`;
                }
            } catch (error) {
                console.error('Error fetching child details:', error);
                childDetailsDiv.innerHTML = `<p>Error fetching details. Please try again later.</p>`;
            }
        });
    </script>

</body>
</html>
